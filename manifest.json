{
  "manifest_version": 3,
  "name": "Hawky Extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "downloads",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://*.instagram.com/*",
    "https://www.facebook.com/*",
    "https://*.facebook.com/*",
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://ads.google.com/*",
    "https://admanager.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*"
      ],
      "exclude_matches": ["*://chrome.google.com/*"],
      "js": ["content.js", "screenshot.js", "instagram.js"]
    },
    {
      "matches": [
        "https://*.facebook.com/*"
      ],
      "exclude_matches": ["*://chrome.google.com/*", "https://www.facebook.com/ads/library/*"],
      "js": ["content.js", "screenshot.js", "facebook.js"]
    },
    {
      "matches": [
        "https://*.linkedin.com/*"
      ],
      "js": ["content-linkedin.js"]
    },
    {
      "matches": [
        "https://ads.google.com/*",
        "https://admanager.google.com/*"
      ],
      "js": ["content-googleads.js"]
    },
    {
      "matches": ["https://www.facebook.com/ads/library/*"],
      "js": ["content-metalibrary.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }],
  "options_page": "saved-posts.html",
  "options_ui": {
    "page": "saved-posts.html",
    "open_in_tab": true
  },

  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
